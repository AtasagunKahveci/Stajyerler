@model Stajyerler.View.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<script>
            function Giris() {
                var id = document.getElementById("Yonetici").value;
                var sifre = document.getElementById("Yoneticisifre").value;

                if (id == "admin" && sifre == "123123") {
                   window.open('@Url.Action("Index", "Home")');
            }
        }
</script>

<div class="container" style="margin-top:120px">
    <div class="row">

        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h1 style="text-align:center">
                        <img src="~/img/hosgeldin.png" style="width:223px;margin-top:30px; height:79px" alt="">
                    </h1>
                    <h5 style="text-align:center;color:#1E2123; margin-top:15px; font-size:14px; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Devam Etmek İçin Giriş Yapın</h5>
                    @ViewBag.Mesaj
                    @using (Html.BeginForm("Login", "General", FormMethod.Post))
                    {
                        <form class="form-signin">
                            <div class="form-label-group" style="color:#727C8E; font-size:15px">
                                <input type="text" id="Yonetici" name="Email" placeholder="Email" required class="inputt">
                            </div>
                            <div class="form-label-group" style="color:#727C8E; font-size:15px">
                                <input type="password" id="Yoneticisifre" name="Password" placeholder="Password" required class="inputt">
                            </div>
                            <div style="color:#727C8E;text-align:left; float:left;">
                                <input style=" margin: 0px; padding:0px; float:left;" asp-for="RememberMe" type="checkbox" class="form-check">
                                <label asp-for="RememberMe"><b>(RM)</b></label>
                            </div>
                            <div style="text-align:left;color:#727C8E; font-size:12px">
                                <p>Beni Hatırla </p>
                            </div>
                            <button type="submit" onclick="Giris()" class="btnn" style="width:100%; margin-top:10px; text-align:center; background-color:#DA252D;color:white;">Giriş Yap</button>
                            <hr class="my-4">
                        </form>

                    }
                    <p style="text-align:center; color:#5C6771;font-size:11px; font-weight:600; font-family:'Segoe UI'">Giriş yaparak Gizlilik ve Çerez Politikası’nı okuduğunuzu ve kabul ettiğinizi onaylıyorsunuz.</p>
                </div>
            </div>
        </div>
    </div>
</div>



